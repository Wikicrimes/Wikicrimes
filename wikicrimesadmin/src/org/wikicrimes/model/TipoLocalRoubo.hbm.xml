<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.wikicrimes.model.TipoLocalRoubo" table="TB_TLR_TIPO_LOCAL_ROUBO" lazy="true">
        <id name="idTipoLocalRoubo" column="TLR_IDTIPO_LOCAL_ROUBO" unsaved-value="null">
            <generator class="increment"/>
        </id>
        <property name="nome" column="TLR_NOME" type="java.lang.String" not-null="true"/>
        <property name="descricao" column="TLR_DESCRICAO" type="java.lang.String"/>
    </class>
</hibernate-mapping>
