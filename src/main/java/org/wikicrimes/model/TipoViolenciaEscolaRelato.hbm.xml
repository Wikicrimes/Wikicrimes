<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.wikicrimes.model.TipoViolenciaEscolaRelato" table="TB_TVE_TIPO_VIOLENCIA_ESCOLA_RELATO" lazy="true">
        <id name="idTipoViolenciaEscolaRelato" column="TVE_IDTIPO_VIOLENCIA_ESCOLA_RELATO" unsaved-value="null">
            <generator class="increment"/>
        </id>
        <property name="nome" column="TVE_NOME" type="java.lang.String" not-null="true"/>
        <property name="descricao" column="TVE_DESCRICAO" type="java.lang.String"/>
    </class>
</hibernate-mapping>
