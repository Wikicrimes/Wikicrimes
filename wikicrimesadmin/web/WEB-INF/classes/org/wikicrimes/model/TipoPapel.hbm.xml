<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.wikicrimes.model.TipoPapel" table="TB_TPA_TIPO_PAPEL" lazy="true">
        <id name="idTipoPapel" column="TPA_IDTIPO_PAPEL" unsaved-value="null">
            <generator class="increment"/>
        </id>
        <property name="nome" column="TPA_NOME" type="java.lang.String" not-null="true"/>
        <property name="descricao" column="TPA_DESCRICAO" type="java.lang.String"/>
    </class>
</hibernate-mapping>
