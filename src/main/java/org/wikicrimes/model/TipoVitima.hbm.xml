<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.wikicrimes.model.TipoVitima" table="TB_TVI_TIPO_VITIMA" lazy="false">
        <id name="idTipoVitima" column="TVI_IDTIPO_VITIMA" unsaved-value="null">
            <generator class="increment"/>
        </id>
        <property name="nome" column="TVI_NOME" type="java.lang.String" not-null="true"/>
        <property name="descricao" column="TVI_DESCRICAO" type="java.lang.String"/>
    </class>
</hibernate-mapping>
