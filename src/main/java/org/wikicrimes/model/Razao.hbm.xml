<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.wikicrimes.model.Razao" table="TB_RAZ_RAZAO" lazy="true">
        <id name="idRazao" column="RAZ_IDRAZAO" unsaved-value="null">
            <generator class="increment"/>
        </id>       
        <property name="nome" column="RAZ_NOME" type="java.lang.String" not-null="false"/>
        <property name="descricao" column="RAZ_DESCRICAO" type="java.lang.String" not-null="false"/>        
    </class>
</hibernate-mapping>
