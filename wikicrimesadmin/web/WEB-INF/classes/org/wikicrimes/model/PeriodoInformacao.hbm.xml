<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.wikicrimes.model.PeriodoInformacao" table="TB_PRI_PERIODO_INFORMACAO" lazy="true">
        <id name="idPeriodoInformacao" column="PRI_IDPERIODO_INFORMACAO" unsaved-value="null">
            <generator class="increment"/>
        </id>
        <property name="nome" column="PRI_NOME" type="java.lang.String" not-null="true"/>
        <property name="descricao" column="PRI_DESCRICAO" type="java.lang.String"/>
    </class>
</hibernate-mapping>
