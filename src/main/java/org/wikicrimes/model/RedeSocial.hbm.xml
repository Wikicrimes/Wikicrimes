<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.wikicrimes.model.RedeSocial" table="TB_RSO_REDE_SOCIAL" lazy="true">
        <id name="idRedeSocial" column="RSO_IDREDE_SOCIAL" unsaved-value="null">
            <generator class="increment"/>
        </id>
        <property name="dominioRedeSocial" column="RSO_DOMINIO" type="java.lang.String" unique="true"/>
        <property name="nomeRedeSocial" column="RSO_NOME" type="java.lang.String" not-null="true"/>
        <property name="descricaoRedeSocial" column="RSO_DESCRICAO" type="java.lang.String"/>
       
    </class>
</hibernate-mapping>
