<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.wikicrimes.model.TipoArmaUsada" table="TB_TAU_TIPO_ARMA_USADA" lazy="true">
        <id name="idTipoArmaUsada" column="TAU_IDTIPO_ARMA_USADA" unsaved-value="null">
            <generator class="increment"/>
        </id>
        <property name="nome" column="TAU_NOME" type="java.lang.String" not-null="true"/>
        <property name="descricao" column="TAU_DESCRICAO" type="java.lang.String"/>
    </class>
</hibernate-mapping>
