<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.wikicrimes.model.TipoCrime" table="TB_TCR_TIPO_CRIME" lazy="true">
        <id name="idTipoCrime" column="TCR_IDTIPO_CRIME" unsaved-value="null">
            <generator class="increment"/>
        </id>
        <property name="nome" column="TCR_NOME" type="java.lang.String" not-null="true"/>
        <property name="descricao" column="TCR_DESCRICAO" type="java.lang.String"/>
    </class>
</hibernate-mapping>
