<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.wikicrimes.model.TipoRegistro" table="TB_TRE_TIPO_REGISTRO" lazy="true">
        <id name="idTipoRegistro" column="TRE_IDTIPO_REGISTRO" unsaved-value="null">
            <generator class="increment"/>
        </id>
        <property name="nome" column="TRE_NOME" type="java.lang.String" not-null="true"/>
        <property name="descricao" column="TRE_DESCRICAO" type="java.lang.String"/>
    </class>
</hibernate-mapping>
